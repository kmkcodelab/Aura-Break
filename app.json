{
  "expo": {
    "name": "Aura Break",
    "slug": "aura-break",
    "version": "1.0.0",
    "description": "A premium minimalist productivity and mental wellness app featuring a Pomodoro focus timer, daily quest management, and mood reflection journal with a sleek glassmorphism UI.",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kmkcodelab.aurabreak"
    },
    "android": {
      "package": "com.kmkcodelab.aurabreak",
      "versionCode": 1,
      "permissions": [
        "SYSTEM_ALERT_WINDOW",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS",
        "VIBRATE",
        "INTERNET"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#0F172A"
      }
    },
    "plugins": [
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-8386795368168436~9681094959",
          "iosAppId": "ca-app-pub-8386795368168436~9681094959"
        }
      ],
      "expo-notifications"
    ]
  }
}
